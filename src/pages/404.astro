---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`} className="container">
  <Header />

  <main id="main-content">
    <div class="not-found-wrapper stack">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>Page Not Found</p>
      <LinkButton
        href="/"
        className="my-6 underline decoration-dashed underline-offset-8 text-lg"
      >
        Go back home
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style lang="scss">
  .container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 100%;
    min-height: 100dvh;
  }
  #main-content {
    display: grid;
    place-items: center;
  }
  .not-found-wrapper {
    text-align: center;

    h1 {
      font-size: 8rem;
      font-weight: var(--cmm-font-weight-bold);
      line-height: 1;
    }

    p {
      font-size: 2rem;
    }

    a {
      color: var(--cmm-color-link);
      font-weight: var(--cmm-font-weight-medium);
      text-decoration: underline;
    }
  }
</style>
